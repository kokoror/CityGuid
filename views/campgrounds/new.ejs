<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">

        <!-- client-side validation: add required to each of the filed you want to apply , and add novalidate at the form  -->
        <!-- copy the js script from Bootstrap down the botton of this page, and add a class="needs-validation" on at the form -->
        <!-- check Bootstrap website validation part under form section  -->

        <!-- include enctype to support img upload -->
        <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="campground[title]" class="form-control" required>
                <!--"campground[title]" - everything in the requst body will be saved under campground -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" name="campground[location]" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div>
                <label for="formFileLg" class="form-label">Upload Images</label>
                <input class="form-control form-control-lg" name='image' id="formFileLg" type="file" multiple>
            </div>
            <!-- v2 -->
            <!-- <input type="file" name="image" id="" multiple> -->

            <!-- v1 -->
            <!-- <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" id="image" name="campground[image]" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" id="price" name="campground[price]" class="form-control" placeholder="0.0" aria-label="Price"
                        aria-describedby="basic-addon1" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">description</label>
                <textarea type="text" id="description" name="campground[description]" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <button class="btn btn-primary">Add Campground</button>
        </form>
        <a href="/campgrounds">All Campgrounds</a>

    </div>
</div>

